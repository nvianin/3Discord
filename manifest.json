{
  "name": "3Discord",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Bring Discord into the Third Dimension",
  "homepage_url": "http://perdu.com/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://discord.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://discord.com/*"
      ],
      "js": [
        "src/inject/inject.js",
        "three.js",
        "src/inject/renderer.js"
      ]
    }
  ]
}